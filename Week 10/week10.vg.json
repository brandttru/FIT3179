{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": {
    "text": "History of Country Average Points in the IMO (1993-2023)",
    "fontSize": 25,
    "anchor": "middle",
    "color": "#000000",
    "offset": 15
  },
  
  "data": {
    "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/individual_results_df.csv"
  },

  "transform": [ 
    {
        "filter": "year(datum.year) >= 1993"
    },
    {
      "aggregate": [
        {"op": "mean", "field": "total", "as": "avg_points"}
      ],
      "groupby": ["year", "country"]
    }
  ],

  "mark": {
    "type": "line",
    "opacity": 0.8,
    "size": 3
  },

  "encoding": {
    "x": {
        "field": "year",
        "type": "temporal",
        "title": "year"
    },
    "y": {
        "field": "avg_points",
        "type": "quantitative", 
        "title": "Average Points"
    },
    "color": {
        "field": "country",
        "type": "nominal",
        "title": "Country",
        "legend": {"orient": "right"}
    },
    "tooltip": [
        {"field": "country", "type": "nominal", "title": "Country"},
        {"field": "year", "type": "temporal", "title": "Year", "timeUnit": "year"},
        {"field": "avg_points", "type": "quantitative", "title": "Average Points"}
    ]
  },

  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}