{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": {
    "text": "History of IMO Individuals Total Score",
    "fontSize": 25,
    "anchor": "middle",
    "color": "#000000",
    "offset": 15
  },
  
  "data": {
    "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/individual_results_df.csv"
  },

  "mark": {
    "type": "point",
    "filled": true,
    "opacity": 0.8,
    "size": 60
  },

  "encoding": {
    "x": {
      "field": "individual_rank",
      "type": "quantitative",
      "title": "Rank",
      "scale": {"reverse": true}
    },
    "y": {
      "field": "total",
      "type": "quantitative",
      "title": "Points"
    },
    "color": {
      "field": "country",
      "type": "nominal",
      "title": "Country",
      "legend": {"orient": "right"}
    },
    "tooltip": [
      {"field": "contestant", "type": "nominal", "title": "Contestant"},
      {"field": "country", "type": "nominal", "title": "Country"},
      {"field": "year", "type": "temporal", "title": "Year", "timeUnit": "year"},
      {"field": "individual_rank", "type": "quantitative", "title": "Rank"},
      {"field": "total", "type": "quantitative", "title": "Points"}
    ]
  },

  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}