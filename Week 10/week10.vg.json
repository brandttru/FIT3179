{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,
  "title": {
    "text": "History of Country Average Points in the IMO (1993-2024)",
    "fontSize": 25,
    "anchor": "middle",
    "color": "#000000",
    "offset": 15
  },
  
  "data": {
    "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/individual_results_df.csv"
  },

  "transform": [ 
    {
        "filter": "year(datum.year) >= 1993"
    },
    {
        "aggregate": [
        {"op": "mean", "field": "total", "as": "avg_points"}
        ],
        "groupby": ["year", "country"]
    },
    {
        "joinaggregate": [
            {"op": "mean", "field": "avg_points", "as": "country_overall_avg"}
        ],
        "groupby": ["country"]
    },
    {
        "filter": "datum.country_overall_avg >= 20"
    },
    {
        "filter": "!test(/^C\\d+$/, datum.country)"
    }
  ],

  "encoding": {
    "x": {
        "field": "year",
        "type": "temporal",
        "title": "Year"
    },
    "y": {
        "field": "avg_points",
        "type": "quantitative", 
        "title": "Average Points",
        "scale": {"domain": [5,45]}
    }
  },

  "layer": [
    {   
        "selection": {
            "country_select": {
                "type": "multi",
                "fields": ["country"],
                "bind": "legend"
            }
        },
        "mark": {
            "type": "line",
            "size": 3
        },
        "encoding": {
            "color": {
                "field": "country",
                "type": "nominal",
                "title": "Country",
                "legend": {"orient": "right"}
            },
            "opacity": {
                "condition": {"selection": "country_select", "value": 1},
                "value": 0.1
            },
            "tooltip": [
                {"field": "country", "type": "nominal", "title": "Country"},
                {"field": "year", "type": "temporal", "title": "Year", "timeUnit": "year"},
                {"field": "avg_points", "type": "quantitative", "title": "Average Points", "format": ".2f"}
            ]
        }
    },
    {
        "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -10,
            "fontSize": 11.5,
            "fontStyle": "italic"
        },
        "transform": [
            {
                "aggregate": [{"op": "argmax", "field": "year", "as": "latest"}],
                "groupby": ["country"]
            },
            {"calculate": "datum.latest.year", "as": "year"},
            {"calculate": "datum.latest.avg_points", "as": "avg_points"}
        ],
        "encoding": {
            "text": {
                "field": "country",
                "type": "nominal"
            },
            "opacity": {
                "condition": {
                    "selection": "country_select",
                    "value": 1
                },
                "value": 0
            }
        }
    }
  ],

  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}