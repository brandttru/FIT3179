{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/world-education-data.csv"
    },
    "params": [
        {
            "name": "country_search",
            "value": "",
            "bind": {
                "input": "search",
                "placeholder": "Search country...",
                "name": "Search Country: "
            }
        },
        {
            "name": "continent_dropdown",
            "value": "All",
            "bind": {
                "input": "select",
                "options": [
                "All",
                "Africa",
                "Asia",
                "Europe",
                "North America",
                "Oceania",
                "South America"
                ],
                "name": "Select Continent: "
            }
        },
        {
            "name": "min_expenditure",
            "value": 8,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 16,
                "step": 0.1,
                "name": "Min % Gov Spending on Education: "
            }
        }
    ],

    "transform": [
        {
            "filter": "datum.gov_exp_pct_gdp != null && datum.gov_exp_pct_gdp > 0"
        },
        {
            "filter": "!country_search || test(regexp(country_search, 'i'), datum.country)"
        },
        {
            "filter": "datum.gov_exp_pct_gdp >= min_expenditure"
        },
        {
            "lookup": "country_code",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/ne_1.json",
                    "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
                },
                "key": "properties.ISO_A3",  
                "fields": ["properties.CONTINENT"]
            },
            "as": "continent"
        },
        {
            "filter": "datum.continent != null && datum.continent != 'Seven seas (open ocean)'"
        },
        {
            "filter": "continent_dropdown == 'All' || datum.continent == continent_dropdown"
        }
    ],

    "mark": {
        "type": "line",
        "point": true
    },
    "selection": {
            "continent_selected": {
                "type": "multi",
                "fields": ["continent"],
                "bind": "legend"
            }
        },
    "encoding": {
        "x": {
            "field": "year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "gov_exp_pct_gdp",
            "type": "quantitative",
            "title": "Government Expenditure on Education (% of GDP)"
        },
        "color": {
            "field": "continent",
            "type": "nominal",
            "title": "Continent"
        },
        "detail": {
            "field": "country",
            "type": "nominal"
        },
        "opacity": {
                "condition": 
                    {
                        "selection": "continent_selected", "value": 0.8
                    }, 
                "value":0.1
            }, 
        "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "year", "type": "temporal", "title": "Year", "timeUnit": "year"},
            {"field": "gov_exp_pct_gdp", "type": "quantitative", "title": "Gov Expenditure (% of GDP)", "format": ".2f"}
        ]
    },

    "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}