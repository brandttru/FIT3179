{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "data": {
        "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/world-education-data.csv"
    },
    "mark": {
        "type": "line",
        "point": true
    },
    "encoding": {
        "x": {
            "field": "year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "gov_exp_pct_gdp",
            "type": "quantitative",
            "title": "Government Expenditure on Education (% of GDP)"
        },
        "color": {
            "field": "country",
            "type": "nominal",
            "title": "Country",
            "scale": {
                "scheme": "category10"
            }
        }
    }
}