{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 500,

  "projection": {"type": "equalEarth"},

  "params": [
    {
        "name": "year_selection",
        "value": 2024,
        "bind": {
        "input": "range",
        "min": 1993,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],

  "layer": [
    {
        "data": {
            "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/ne_1.json",
            "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
        },
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white", "strokeWidth": 0.5}
    },
    {
        "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    
    {
        "data": {
            "url": "https://raw.githubusercontent.com/brandttru/FIT3179/main/data/country_results_df.csv"
        },
        "transform": [
        {"filter": "datum.year == year_selection"},
        {
            "calculate": "(datum.team_size_female / datum.team_size_all) * 100",
            "as": "female_percentage"
        },
        {
            "lookup": "country",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/ne_1.json",
                    "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
                },
                "key": "properties.NAME",
                "fields": ["type", "geometry", "properties"]
            }
        }
        ],
        "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
        "encoding": {
            "color": {
                "field": "female_percentage",
                "type": "quantitative",
                "scale": {"scheme": "reds"},
                "legend": {"title": "Female Contestants (%)", "format": ".2f"}
            },
            "tooltip": [
                {"field": "country", "type": "nominal", "title": "Country"},
                {"field": "team_size_female", "type": "quantitative", "title": "Female Contestants"},
                {"field": "female_percentage", "type": "quantitative", "title": "Female Contestants (%)", "format": ".2f"},
                {"field": "team_size_all", "type": "quantitative", "title": "Total Team Size"}
            ]
        }
    },
    {
        "data": {
            "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/ne_1.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
        },
        "mark": {"type": "geoshape", "fill": null, "stroke": "#999999", "strokeWidth": 0.5}
    }
    ],

    "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}
