{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": {
        "text": "Number of Women enrolled in STEM Education (2000â€“2023)",
        "fontSize": 25,
        "anchor": "middle",
        "color": "#000000",
        "offset": 15
    },
    "data": {
        "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/women_in_stem.csv"
    },
    "params": [
        {
            "name": "country_selected",
            "value": "Australia",
            "bind": {
                "input": "select",
                "options": ["Australia", "China", "India", "USA", "Germany", "Canada"],
                "name": "Country: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Country == country_selected"
        }
    ],
    "mark": {
        "type": "area",
        "interpolate": "monotone"
    },
    "encoding": {
        "x": {
            "field": "Year",
            "type": "temporal",
            "title": "Year"
        },
        "y": {
            "field": "Female Enrollment (%)",
            "type": "quantitative",
            "stack": "zero",
            "title": "% of Women"
        },
        "color": {
            "field": "STEM Fields",
            "type": "nominal",
            "title": "STEM Field",
            "scale": {
                "scheme": "category10"
            }
        }
    }
}