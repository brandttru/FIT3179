{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 300,
  
  "data": {
    "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/timeline_df.csv"
  },

  "transform": [
    {
      "fold": ["male_contestant", "female_contestant"],
      "as": ["gender", "count"]
    }
  ],

  "mark": {
    "type": "line",
    "point": true
  },

  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": "Year",
      "timeUnit": "year"
    },
    "y": {
      "field": "count",
      "type": "quantitative", 
      "title": "Number of contestants"
    },
    "color": {
      "field": "gender",
      "type": "nominal",
      "title": "Gender",
      "scale": {
        "domain": ["male_contestant", "female_contestant"],
        "range": ["blue", "red"]
      },
      "legend": {
        "title": "Gender",
        "labelExpr": "datum.label == 'male_contestant' ? 'Male' : 'Female'"
      }
    },
    "tooltip": [
      {"field": "year", "type": "temporal", "title": "Year", "timeUnit": "year"},
      {"field": "count", "type": "quantitative", "title": "Number of Male/Female Contestants"}
    ]
  },

  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}