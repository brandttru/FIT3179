{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 300,
    "data": {
        "url": "https://raw.githubusercontent.com/brandttru/FIT3179/main/data/country_results_df.csv"
    },
    "params": [
        {
            "name": "year_selected",
            "value": 2024,
            "bind": {
                "input": "range",
                "min": 1993,
                "max": 2024,
                "step": 1,
                "name": "Year: "
            }
        },
        {
            "name": "min_gold",
            "value": 1,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 6,
                "step": 1,
                "name": "Minimum Gold Medals: "
            }
        },
        {
            "name": "min_silver",
            "value": 1,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 6,
                "step": 1,
                "name": "Minimum Silver Medals: "
            }
        },
        {
            "name": "min_bronze",
            "value": 2,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 6,
                "step": 1,
                "name": "Minimum Bronze Medals: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.year == year_selected"
        },
        {
            "filter": "datum.awards_gold >= min_gold"
        },
        {
            "filter": "datum.awards_silver >= min_silver"
        },
        {
            "filter": "datum.awards_bronze >= min_bronze"
        },  
        {
            "fold": ["p1", "p2", "p3", "p4", "p5", "p6", "p7"],
            "as": ["problem", "score"]
        },
        {
            "filter": "isValid(datum.score)"
        },
        {
            "calculate": "replace(datum.problem, 'p', 'Problem ')",
            "as": "problem_label"
        }
    ],
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "country",
            "type": "nominal",
            "title": "Country",
            "sort": {
                "field": "total_score",
                "op": "max",
                "order": "descending"
            }
        },
        "y": {
            "field": "problem_label",
            "type": "nominal",
            "title": "Problem Number"
        },
        "color": {
            "field": "score",
            "type": "quantitative",
            "scale": {
                "scheme": "greens"
            },
            "legend": {
                "title": "Score"
            }
        },
        "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "problem_label", "type": "nominal", "title": "Problem"},
            {"field": "score", "type": "quantitative", "title": "Score: "}
        ]
    },

    "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    }
  }
}