{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": {
        "text": "Medals awarded at the International Mathematical Olympiad (1993â€“2024)",
        "fontSize": 25,
        "anchor": "middle",
        "color": "#000000",
        "offset": 15
    },
    "data": {
        "url": "https://raw.githubusercontent.com/brandttru/FIT3179/main/data/country_results_df.csv"
    },
    "params": [
        {
            "name": "medal_type",
            "value": "no_of_gold",
            "bind": {
                "input": "select",
                "options": ["no_of_gold", "no_of_silver", "no_of_bronze"],
                "labels": ["Gold Medals", "Silver Medals", "Bronze Medals"],
                "name": "Medal Type: "
            }
        }
    ],
    "transform": [
        {
            "aggregate": [
                {"op": "count", "as": "total_appearances"},
                {"op": "sum", "field": "awards_gold", "as": "no_of_gold"},
                {"op": "sum", "field": "awards_silver", "as": "no_of_silver"},
                {"op": "sum", "field": "awards_bronze", "as": "no_of_bronze"},
                {"op": "sum", "field": "team_size_all", "as": "total_participants"}
            ],
            "groupby": ["country"]
        },
        {
            "lookup": "country",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
                    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
                },
                "key": "properties.NAME",
                "fields": ["properties.CONTINENT"]
            },
            "as": "continent"
        },
        {
            "calculate": "medal_type == 'no_of_gold' ? datum.no_of_gold : medal_type == 'no_of_silver' ? datum.no_of_silver : datum.no_of_bronze",
            "as": "selected_medal_count"
        }
    ],

    "encoding": {
        "x": {
            "field": "total_appearances",
            "type": "quantitative",
            "title": "Total Appearances"
        },
        "y": {
            "field": "selected_medal_count",
            "type": "quantitative",
            "title": "Medals"
        }
    },
    
    "layer": [
        {
            "mark": {
                "type": "circle",
                "opacity": 0.8
            },
            "encoding": {
                "size": {
                    "field": "total_participants",
                    "type": "quantitative",
                    "legend": {
                        "title": "Number of Participants",
                        "format": "d"
                    },
                    "scale": {"range": [0,2000]}
                },
                "color": {
                    "field": "continent",
                    "type": "nominal",
                    "legend": {
                        "title": "Continent"
                    }
                },
                "tooltip": [
                    {"field": "country", "type": "nominal", "title": "Country"},
                    {"field": "continent", "type": "nominal", "title": "Continent"},
                    {"field": "total_appearances", "type": "quantitative", "title": "Appearances"},
                    {"field": "selected_medal_count", "type": "quantitative", "title": "Medals"},
                    {"field": "total_participants", "type": "quantitative", "title": "Total Participants"}
                ]
            }
        },
        {
            "transform": [
                {
                    "filter": "datum.total_appearances > 40 && datum.selected_medal_count > 25"
                }
            ],
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -10,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "country",
                    "type": "nominal"
                }
            }
        }
    ]
}