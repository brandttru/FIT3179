{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 600,
    "data": {
        "url": "https://raw.githubusercontent.com/brandttru/FIT3179/main/data/country_results_df.csv"
    },
    "params": [
        {
            "name": "medal_type",
            "value": "no_of_gold",
            "bind": {
                "input": "select",
                "options": ["no_of_gold", "no_of_silver", "no_of_bronze"],
                "labels": ["Gold Medals", "Silver Medals", "Bronze Medals"],
                "name": "Medal Type: "
            }
        },
        {
            "name": "country_search",
            "bind": {
                "input": "search",
                "placeholder": "Country",
                "name": "Search"
            },
            "value": ""
        }
    ],
    "transform": [
        {
            "calculate": "datum.country == 'Commonwealth of Independent States' ? 'Russia' : datum.country == 'Union of Soviet Socialist Republics' ? 'Russia' : datum.country == 'German Democratic Republic' ? 'Germany' : datum.country == 'TÃ¼rkiye' ? 'Turkey' : datum.country == 'Yugoslavia' ? 'Serbia' : datum.country == 'Czechoslovakia' ? 'Czech Republic' : datum.country == 'Macau' ? 'Macao' : datum.country",
            "as": "country_merged"
        },
        {
            "aggregate": [
                {"op": "count", "as": "total_appearances"},
                {"op": "sum", "field": "awards_gold", "as": "no_of_gold"},
                {"op": "sum", "field": "awards_silver", "as": "no_of_silver"},
                {"op": "sum", "field": "awards_bronze", "as": "no_of_bronze"},
                {"op": "sum", "field": "team_size_all", "as": "total_participants"}
            ],
            "groupby": ["country_merged"]
        },
        {
            "lookup": "country_merged",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/ne_1.json",
                    "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
                },
                "key": "properties.NAME",  
                "fields": ["properties.CONTINENT"]
            },
            "as": "continent_name"
        },
        {
            "lookup": "country_merged",
            "from": {
                "data": {
                    "url": "https://raw.githubusercontent.com/brandttru/FIT3179/refs/heads/main/data/ne_1.json",
                    "format": {"type": "topojson", "feature": "ne_10m_admin_0_countries"}
                },
                "key": "properties.FORMAL_EN",  
                "fields": ["properties.CONTINENT"]
            },
            "as": "continent_formal"
        },
        {
            "calculate": "datum.continent_name || datum.continent_formal",
            "as": "continent"
        },
        {
            "calculate": "medal_type == 'no_of_gold' ? datum.no_of_gold : medal_type == 'no_of_silver' ? datum.no_of_silver : datum.no_of_bronze",
            "as": "selected_medal_count"
        },
        {
            "filter": "datum.continent != null"
        },
        {
            "filter": "!country_search || test(regexp(country_search,'i'),datum.country_merged)"
        }
    ],

    "encoding": {
        "x": {
            "field": "total_appearances",
            "type": "quantitative",
            "title": "Total Appearances"
        },
        "y": {
            "field": "selected_medal_count",
            "type": "quantitative",
            "title": "Medals"
        }
    },
    
    "layer": [
        {
            "selection": {
                "continent_selected": {
                    "type": "multi",
                    "fields": ["continent"],
                    "bind": "legend"
                }
            },
            "mark": {
                "type": "circle",
                "opacity": 0.8
            },
            "encoding": {
                "size": {
                    "field": "total_participants",
                    "type": "quantitative",
                    "legend": {
                        "title": "Number of Participants",
                        "format": "d"
                    },
                    "scale": {"range": [0,2000]}
                },
                "color": {
                    "field": "continent",
                    "type": "nominal",
                    "legend": {
                        "title": "Continent"
                    }
                },
                "opacity": {
                    "condition": 
                        {
                            "selection": "continent_selected", "value": 0.8
                        }, 
                    "value":0.1
                }, 
                "tooltip": [
                    {"field": "country_merged", "type": "nominal", "title": "Country"},
                    {"field": "continent", "type": "nominal", "title": "Continent"},
                    {"field": "total_appearances", "type": "quantitative", "title": "Appearances"},
                    {"field": "selected_medal_count", "type": "quantitative", "title": "Medals"},
                    {"field": "total_participants", "type": "quantitative", "title": "Total Participants"}
                ]
            }
        },
        {
            "transform": [
                {
                    "filter": "datum.total_appearances > 40 && datum.selected_medal_count > 25"
                }
            ],
            "mark": {
                "type": "text",
                "align": "right",
                "baseline": "middle",
                "dx": -10,
                "fontSize": 11.5,
                "fontStyle": "italic"
            },
            "encoding": {
                "text": {
                    "field": "country_merged",
                    "type": "nominal"
                }
            }
        }
    ],
    
    "config": {
        "axis": {
            "labelFontSize": 12,
            "titleFontSize": 14
        }
    }
}